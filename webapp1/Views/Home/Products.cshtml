@model IEnumerable<webapp1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5 fw-bold text-primary">
            <i class="fas fa-box me-2"></i>@ViewData["Title"]
        </h1>
        <p class="lead text-muted">Products fetched from database using SQL queries via Entity Framework Core</p>
    </div>
    <div class="col-md-4 text-md-end">
        <a class="btn btn-success btn-lg shadow" asp-action="ExportProductsToPdf">
            <i class="fas fa-file-pdf me-2"></i>Export to PDF
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-table me-2"></i>Products Database
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                        <th><i class="fas fa-tag me-1"></i>Name</th>
                        <th><i class="fas fa-folder me-1"></i>Category</th>
                        <th><i class="fas fa-dollar-sign me-1"></i>Price</th>
                        <th><i class="fas fa-calendar me-1"></i>Created Date</th>
                        <th><i class="fas fa-check-circle me-1"></i>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@product.Id</span></td>
                                <td class="fw-semibold">@product.Name</td>
                                <td>
                                    <span class="badge bg-info">@product.Category</span>
                                </td>
                                <td class="text-success fw-bold">@product.Price.ToString("C")</td>
                                <td class="text-muted">@product.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Active
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                No products found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
        </a>
    </div>
    <div class="col-md-6 text-md-end">
        <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            @(Model?.Count() ?? 0) products displayed
        </small>
    </div>
</div>