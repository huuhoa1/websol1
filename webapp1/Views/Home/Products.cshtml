@model IEnumerable<webapp1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Products fetched from database using SQL queries via Entity Framework Core</p>
</div>

<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportProductsToPdf">
        <i class="fas fa-file-pdf"></i> Export to PDF
    </a>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Created Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Category</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.CreatedDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="badge bg-success">Active</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No products found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Index">Back to Home</a>
</div>