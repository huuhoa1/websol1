@model IEnumerable<webapp1.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Countries data fetched from GraphQL endpoint</p>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Capital</th>
                    <th>Currency</th>
                    <th>Phone</th>
                    <th>Continent</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var country in Model)
                    {
                        <tr>
                            <td>@country.Code</td>
                            <td>@country.Name</td>
                            <td>@(string.IsNullOrEmpty(country.Capital) ? "-" : country.Capital)</td>
                            <td>@(string.IsNullOrEmpty(country.Currency) ? "-" : country.Currency)</td>
                            <td>@(string.IsNullOrEmpty(country.Phone) ? "-" : country.Phone)</td>
                            <td>
                                <span class="badge bg-info">@country.Continent.Name</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No countries found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Index">Back to Home</a>
</div>