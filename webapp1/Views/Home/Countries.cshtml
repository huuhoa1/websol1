@model IEnumerable<webapp1.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5 fw-bold text-success">
            <i class="fas fa-globe me-2"></i>@ViewData["Title"]
        </h1>
        <p class="lead text-muted">Countries data fetched from GraphQL endpoint</p>
    </div>
    <div class="col-md-4 text-md-end">
        <a class="btn btn-success btn-lg shadow" asp-action="ExportCountriesToPdf">
            <i class="fas fa-file-pdf me-2"></i>Export to PDF
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">
            <i class="fas fa-table me-2"></i>Countries Data via GraphQL
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-flag me-1"></i>Code</th>
                        <th><i class="fas fa-map me-1"></i>Country</th>
                        <th><i class="fas fa-city me-1"></i>Capital</th>
                        <th><i class="fas fa-coins me-1"></i>Currency</th>
                        <th><i class="fas fa-phone me-1"></i>Phone Code</th>
                        <th><i class="fas fa-globe-americas me-1"></i>Continent</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var country in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-dark fw-bold">@country.Code</span>
                                </td>
                                <td class="fw-semibold">@country.Name</td>
                                <td class="text-muted">
                                    @(string.IsNullOrEmpty(country.Capital) ? 
                                        "<i class=\"fas fa-minus text-muted\"></i>" : 
                                        $"<i class=\"fas fa-building me-1 text-primary\"></i>{country.Capital}")
                                </td>
                                <td class="text-success">
                                    @(string.IsNullOrEmpty(country.Currency) ? 
                                        "<i class=\"fas fa-minus text-muted\"></i>" : 
                                        $"<i class=\"fas fa-dollar-sign me-1\"></i>{country.Currency}")
                                </td>
                                <td class="text-info">
                                    @(string.IsNullOrEmpty(country.Phone) ? 
                                        "<i class=\"fas fa-minus text-muted\"></i>" : 
                                        $"<code>+{country.Phone}</code>")
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-earth-americas me-1"></i>@country.Continent.Name
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-globe-slash fa-3x mb-3 d-block"></i>
                                No countries found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
        </a>
    </div>
    <div class="col-md-6 text-md-end">
        <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            @(Model?.Count() ?? 0) countries displayed
        </small>
    </div>
</div>