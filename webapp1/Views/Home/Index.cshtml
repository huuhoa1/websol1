@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section bg-primary text-white rounded mb-5 py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-database me-3"></i>Welcome to DataApp
        </h1>
        <p class="lead mb-4">Modern data visualization and export platform</p>
        <p class="mb-4">Explore our data collections and export them to PDF format with ease.</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-box text-primary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Products Database</h5>
                <p class="card-text">View and manage product data from our SQL database. Export to PDF for reports.</p>
                <a asp-action="Products" class="btn btn-primary">
                    <i class="fas fa-box me-2"></i>View Products
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-globe text-success" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Countries Data</h5>
                <p class="card-text">Explore country information from our GraphQL API. Generate detailed reports.</p>
                <a asp-action="Countries" class="btn btn-success">
                    <i class="fas fa-globe me-2"></i>View Countries
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">
                    <i class="fas fa-file-pdf text-danger me-2"></i>PDF Export Features
                </h5>
                <p class="card-text">All data tables can be exported to professional PDF format for sharing and reporting.</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <span class="badge bg-info fs-6 py-2 px-3">
                        <i class="fas fa-database me-1"></i>Database Integration
                    </span>
                    <span class="badge bg-warning fs-6 py-2 px-3">
                        <i class="fas fa-cloud me-1"></i>GraphQL API
                    </span>
                    <span class="badge bg-danger fs-6 py-2 px-3">
                        <i class="fas fa-file-pdf me-1"></i>PDF Export
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
